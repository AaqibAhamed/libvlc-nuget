<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <VlcLibs64 Include="$(MSBuildThisFileDirectory)..\runtimes\win10-x64\native\**" />
  </ItemGroup>

  <Target Name="VlcLibsBuildx64" BeforeTargets="AfterBuild">
    <Message Importance="high" Text="Copying libvlc x64 binaries" />
    <Copy SourceFiles="@(VlcLibs64)" DestinationFolder="$(TargetDir)libvlc\x64\%(RecursiveDir)" SkipUnchangedFiles="false" />
  </Target>
</Project>